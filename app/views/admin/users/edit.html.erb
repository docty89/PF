<div class="container my-4">

  <div class="row">
    <div class="col-md-8 col-xs-offset-1">
      <h3 class="mt-2"><%= @user.name %>さんの詳細</h3>
    </div>
  </div>

  <%= form_with model: @user, url: admin_user_path(@user), local: true do |f| %>

  <div class="row">
    <div class="col-md-8">
      <table class="table table-borderless">
        <tr>
          <th>ユーザID</th>
          <td><%= @user.id %></td>
        </tr>
        <tr>
          <th style="width:60px"><%= f.label :名前 %></th>
          <td class="d-flex">
            <%= f.text_field :name, class:"form-control mr-3" %>
          </td>
        </tr>
        <tr>
          <th><%= f.label :都道府県 %></th>
          <td><%= f.text_field :prefecture_code, class:"form-control" %></td>
        </tr>
        <tr>
          <th><%= f.label :市区町村 %></th>
          <th><%= f.text_field :city, class:"form-control" %></th>
        </tr>
        <tr>
          <th><%= f.label :メールアドレス %></th>
          <td><%= f.text_field :email , class:"form-control"%></td>
        </tr>
      </div>
    </div>

    <div class="row">
      <div class="col-md-8">
        <tr class="form-group form-inline d-flex flex-nowrap">
          <th class="form-group form-inline mr-5">ステータス</th>
          <td class="p-0 form-group form-inline ml-5">
          　<%= f.radio_button :is_deleted, :false %>
          　<%= f.label :is_deleted, "有効", {value: :false, style: "display: inline-block;"} %>
          　<%= f.radio_button :is_deleted, :true %>
          　<%= f.label :is_active, "退会", {value: :true, style: "display: inline-block;"} %>
          </td>
        </tr>
        <tr>
          <td>
          <%= f.submit "変更を保存", class: "btn btn-success" %>
          </td>
        </tr>
      </div>
    </div>
    </table>

<% end %>
</div>