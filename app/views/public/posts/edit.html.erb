<div class ="container my-4">
    <div class="row">
        <div class="col-md-4 text-center">
          <h4>投稿編集</h4>
        </div>
    </div>

    <%= form_with model: @post, local: true do |f| %>
    <div class="row justify-content-center">
      <div class="col-md-6">
         <table class="table table-bordered table_border_radius shadow">
            <tbody class="thead-light">
               <tr>
                  <th>画像</th>
                  <td><%= f.attachment_field :image %></td>
               </tr>
               <tr>
                  <th>ジャンル</th>
                  <td><%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: "--選択してください--", class: "form-control" %></td>
               </tr>
               <tr>
                  <th>食材名</th>
                  <td><%= f.text_field :name %></td>
               </tr>
               <tr>
                  <th>保存方法</th>
                  <td><%= f.select :storage, Post.storages.keys, prompt: "--選択してください--", class: "form-control" %></td>
               </tr>
               <tr>
                  <th>消費期限</th>
                  <td><%= f.date_select :expired, class: "form-control" %></td>
               </tr>
               <tr>
                 <th>価格</th>
                 <td><%= f.text_field :price %>円</td>
               </tr>
               <tr>
                 <th>説明</th>
                 <td><%= f.text_area :body %></td>
               </tr>
            </tbody>
         </table>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6 offset-md-4 mt-3">
        <%= f.submit '変更を保存', class:"btn btn-outline-success" %>
      </div>
    </div>
    <% end %>



