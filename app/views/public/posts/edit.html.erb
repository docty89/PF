<h1>編集画面</h1>
<%= form_with model: @post, local: true do |f| %>
  <h4>画像</h4>
  <%= f.attachment_field :image %>
  <h4>ジャンル</h4>
  <%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: "--選択してください--", class: "form-control" %>
  <h4>食材名</h4>
  <%= f.text_field :name %>
  <h4>価格</h4>
  <%= f.text_field :price %>円
  <h4>説明</h4>
  <%= f.text_area :body %>
  <%= f.submit '保存' %>
<% end %>