<div class ="container my-4">
    <div class="row justify-content-center">
        <div class="col-md-auto text-center">
          <h5>新規投稿</h5>
        </div>
    </div>
    
    <%= form_with model: @post, local: true do |f| %>
    <%= render 'shaerd/error_messages', object: f.object %>
    <div class="row justify-content-center">
      <div class="col-md-auto">
         <table class="table table-bordered table_border_radius shadow">
            <tbody class="thead-light">
               <tr>
                  <th>商品画像</th>
                  <td><%= f.attachment_field :image %></td>
               </tr>
               <tr>
                  <th>食材名</th>
                  <td><%= f.text_field :name, class:"form-control"%></td>
               </tr>
               <tr>
                  <th>説明</th>
                  <td><%=f.text_area :body, size: "30x5", class:"form-control" %></td>
               </tr>
               <tr>
                  <th>ジャンル</th>
                  <td><%= f.collection_select :genre_id, @genres, :id, :name, prompt: "--選択してください--", class: "form-control" %></td>
               </tr>
               <tr>
                  <th>保存方法</th>
                  <td><%= f.select :storage, Post.storages.keys, prompt: "--選択してください--", class: "form-control" %></td>
               </tr>
               <tr>
                  <th>消費期限</th>
                  <td><%= f.date_select :expired, class: "form-control" %></td>
               </tr>
               <tr>
                  <th>都道府県</th>
                  <td><%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :name, :name, prompt: "--選択してください--", class: "form-control" %></td>
               </tr>
               <tr>
                  <th>価格</th>
                  <td><%=f.text_field :price, class:"form-control" %>円</td>
               </tr>
               <tr>
                  <th>ステータス</th>
                  <td><%= f.radio_button :is_active, :true %>
    　                 <%= f.label :is_active, "販売中", {value: :true } %>
    　                 <%= f.radio_button :is_active, :false %>
    　                 <%= f.label :is_active, "販売終了", {value: :false } %>
    　             </td>
               </tr>
            </tbody>
         </table>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-md-6 offset-md-4 mt-3">
        <%= f.submit '投稿', class:"btn w-25 btn-outline-success" %>
      </div>
    </div>
    <% end %>
</div>