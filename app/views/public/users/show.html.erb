<div>
  <h3><%= @user.name %></h3>
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpeg" %>
  <% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
  <% if current_user != @user %>
    <%= link_to 'チャットを始める', chat_path(@user) %>
  <% end %>
  <% if current_user != @user %>
    <% if @user.followed_by?(current_user) %>
      <p><%= link_to "フォロー済み", user_relationships_path(@user), method: :delete %></p>
    <% else %>
      <p><%= link_to "フォローする", user_relationships_path(@user), method: :post %></p>
    <% end %>
  <% end %>
  <p><%= @user.body %></p>
  <p>性別：<%= @user.sex %></p>
  <p>登録日時：<%= l @user.created_at, format: :long %></p>
  <p>都道府県：<%= @user.prefecture_code %></p>
  <p>市区町村：<%= @user.city %></p>

</div>

<% @posts.each do |post| %>
<div>
  <%= link_to post_path(post) do %>
  <%= attachment_image_tag post, :image, format: 'jpeg', size: "80x80" %>
  <% end %>
  <p>食材名：<%= post.name %></p>
  <p>説明：<%= post.body %></p>
</div>
<% end %>