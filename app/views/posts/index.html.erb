<% @posts.each do |post| %>
<div>
  <%= link_to post_path(post) do %>
  <%= attachment_image_tag post, :image, format: 'jpeg', size: "200x150" %>
  <% end %>
  <p>投稿ユーザー画像：<%= image_tag 'c2.jpeg', :size => '100x100' %></p>
  <p>食材名：<%= post.name %></p>
  <p>説明：<%= post.body %></p>
  <p>ユーザーネーム：<%= post.user.name %></p>
</div>
<% end %>