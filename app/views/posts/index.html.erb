<% @posts.each do |post| %>
<div>
  <%= link_to post_path(post) do %>
  <%= attachment_image_tag post, :image, format: 'jpeg', size: "200x150" %>
  <% end %>
  <p>食材名：<%= post.name %></p>
  <p>説明：<%= post.body %></p>
  <p>投稿ユーザー画像:<%= attachment_image_tag post.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpeg" %></p>
  <p>ユーザーネーム：<%= post.user.name %></p>
</div>
<% end %>