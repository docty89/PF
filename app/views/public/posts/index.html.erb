<div class="container">
  <div class="row">
    <div class="col-md-auto">
      <div class="list-group mt-3">
          <button type="button" class="list-group-item active disabled">ジャンル別</button>
        <% @genres.each do |genre| %>
          <button type="button" class="list-group-item list-group-item-action"><%= link_to genre.name, posts_path(id: genre) %></button>
        <% end %>
      </div>
    </div>
    <div class="col-md-auto">
      <table class="table table-light table-hover mt-3">
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td>
                <%= link_to post_path(post) do %>
                <%= attachment_image_tag post, :image, format: 'jpeg', size: "100x100" %>
                <% end %>
              </td>
              <td>
                <strong><%= post.name %></strong>
                <p><%= post.price.to_s(:delimited) %>円</p>
              </td>
              <td id="post_<%= post.id %>">
                <p>投稿日<%= l post.created_at, format: :middle %></p>
                <p>更新日<%= l post.updated_at, format: :middle %></p>
                <div class="favorite"><%= render "public/favorites/favorite", post: post %></div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
