<div>
  <h3><%= @user.name %></h3>
  <%= image_tag 'c2.jpeg', :size => '100x100' %>
</div>

<% @posts.each do |post| %>
<div>
  <%= link_to post_path(post) do %>
  <%= attachment_image_tag post, :image, format: 'jpeg', size: "200x150" %>
  <% end %>
  <p>食材名：<%= post.name %></p>
  <p>説明：<%= post.body %></p>
  <p>ユーザーネーム：<%= post.user.name %></p>
</div>
<% end %>