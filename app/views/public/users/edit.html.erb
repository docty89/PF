<div class="container">
  <h3>プロフィール編集</h3>
  <div class="row">
    <div class="col-md-8">
      <%= form_with model:@user, local:true do |f| %>
      <div>
        <div>
          <%= f.label :"名前" %>
          <%= f.text_field :name, autofocus: true, placeholder:"名前"%>
        </div>
        <div>
          <%= f.label :"自己紹介" %>
          <%= f.text_area :body %>
        </div>
        <div>
          <%= f.label :"プロフィール画像" %>
          <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
        </div>
        <div>
          <%= f.submit "変更を保存" %>
          <%= link_to " 退会する", quit_confirm_user_path, class: "glyphicon glyphicon-tint btn btn-danger btn-sm ml-5", style: "margin: 10px;" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>