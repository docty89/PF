<ul class="nav nav-tabs justify-content-center mt-2">
  <li class="nav-item">
    <%= link_to "プロフィール", user_path(current_user.id), class: 'nav-link text-dark' %>
  </li>
  <li class="nav-item">
  <% if unchecked_notifications.any? %>
    <span>
      <i class="fas fa-circle n-circle"></i>
    </span>
  <% end %>
    <%= link_to "通知一覧", notifications_path, class: 'nav-link text-dark' %>
  </li>
  <li class="nav-item nav-pills">
    <a class="nav-link active" href="#">メッセージ</a>
  </li>
  <li class="nav-item">
    <%= link_to "お気に入り", user_favorites_path(current_user.id), class: 'nav-link text-dark' %>
  </li>
  <li class="nav-item">
    <%= link_to "フォロー中", user_followings_path(current_user.id), class: 'nav-link text-dark' %>
  </li>
  <li class="nav-item">
    <%= link_to "フォロワー", user_followers_path(current_user.id), class: 'nav-link text-dark' %>
  </li>
  <li class="nav-item">
    <%= link_to "プロフィール編集", edit_user_path(current_user.id), class: 'nav-link text-dark' %>
  </li>
</ul>

<div class="container my-4">
  <div class="row justify-content-center">
    <div class="col-md-auto text-center">
      <h5>メッセージ</h5>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-6">
      <% if @chat_partners.exists? %>
      <table class="table table-hover mt-3 shadow">
        <tbody>
          <% @chat_partners.each do |partner| %>
          <tr class="post-link">
            <td>
              <p class="mb-0">
                <%= link_to chat_path(partner) do %>
                  <%= attachment_image_tag partner, :profile_image, size: '60x60', format: 'jpeg', fallback: "no_image.jpg" %>
                <% end %>
              </p>
            </td>
            <td>
              <p class="mt-3 mb-0">
                <%= link_to chat_path(partner) do %>
                  <span class="follow-name"><%= partner.name %></span>
                <% end %>
              </p>
            </td>
            <td>
              
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <% else %>
      <p class="text-center">メッセージのやりとりはありません</p>
      <% end %>
    </div>
  </div>
</div>


