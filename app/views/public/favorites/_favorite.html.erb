<% if post.favorited_by?(current_user) %>
  <p>
    <%= link_to 'お気に入り解除', post_favorites_path(post), method: :delete, remote: true, class: "far fa-star star-right" %>
    <%= post.favorites.count %>
  </p>
<% else %>
  <p>
    <%= link_to 'お気に入り登録', post_favorites_path(post), method: :post, remote: true, class: "far fa-star star-dark" %>
    <%= post.favorites.count %>
  </p>
<% end %>