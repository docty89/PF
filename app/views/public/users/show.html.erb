<% if user_signed_in? && current_user.id.to_s == params[:id] %>
<ul class="nav nav-tabs justify-content-center">
  <li class="nav-item">
    <a class="nav-link active" href="#">プロフィール</a>
  </li>
  <li class="nav-item">
  <% if unchecked_notifications.any? %>
    <span>
      <i class="fas fa-circle n-circle"></i>
    </span>
  <% end %>
    <%= link_to "通知一覧", notifications_path, class: 'nav-link text-dark' %>
  </li>
  <li class="nav-item">
    <%= link_to "お気に入り", user_favorites_path(current_user.id), class: 'nav-link text-dark' %>
  </li>
  <li class="nav-item">
    <%= link_to "フォロー中", user_followings_path(current_user.id), class: 'nav-link text-dark' %>
  </li>
  <li class="nav-item">
    <%= link_to "フォロワー", user_followers_path(current_user.id), class: 'nav-link text-dark' %>
  </li>
  <li class="nav-item">
    <%= link_to "プロフィール編集", edit_user_path(current_user.id), class: 'nav-link text-dark' %>
  </li>
</ul>
<% end %>






<div>
  <h3><%= @user.name %></h3>
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  <% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
  <% if current_user != @user %>
    <%= link_to 'チャットを始める', chat_path(@user) %>
  <% end %>
  <% if current_user != @user %>
    <% if @user.followed_by?(current_user) %>
      <p><%= link_to "フォロー済み", user_relationships_path(@user), method: :delete %></p>
    <% else %>
      <p><%= link_to "フォローする", user_relationships_path(@user), method: :post %></p>
    <% end %>
  <% end %>
  <p><%= @user.body %></p>
  <p>性別：<%= @user.sex %></p>
  <p>登録日時：<%= l @user.created_at, format: :long %></p>
  <p>都道府県：<%= @user.prefecture_code %></p>
  <p>市区町村：<%= @user.city %></p>

</div>

<% @posts.each do |post| %>
<div>
  <%= link_to post_path(post) do %>
  <%= attachment_image_tag post, :image, format: 'jpeg', size: "80x80" %>
  <% end %>
  <p>食材名：<%= post.name %></p>
  <p>説明：<%= post.body %></p>
</div>
<% end %>